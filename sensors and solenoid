//Libraries
#include <DHT.h> //DHT sensor
#include <SPI.h> //SD card
#include <SD.h> //SD card

//initializng input pins
const int dhtPin=2; //temperature and humidity sensor pin
const int lightSensorPin=0; //light sensor pin

const int RELAY_ENABLE = 3;

//initializing variables
float temperatureVal=0;
float humidityVal=0;
int lightVal=0;

#define DHTPIN 2     //what pin the sensor is connected to
#define DHTTYPE DHT22 
DHT dht(DHTPIN, DHTTYPE);

//sd card intializiation
File sensorDataFile;

void setup() {
  pinMode(dhtPin,INPUT);
  pinMode(lightSensorPin,INPUT);
  pinMode(RELAY_ENABLE, OUTPUT);

  dht.begin();

  Serial.begin(9600);
  while (!Serial) {; // wait for serial port to connect. Needed for native USB port only
  }
  Serial.print("Initializing SD card...");

  if (!SD.begin(10)) {
  Serial.println("initialization failed!");
  while (1);
  }

  Serial.println("initialization done.");

  sensorDataFile=SD.open("data.txt", FILE_WRITE);
  sensorDataFile.println("Temp Sensor, Humidity Sesnor, Light Sensor");
  sensorDataFile.close();

}

void loop() {
  temperatureVal=dht.readTemperature();
  humidityVal=dht.readHumidity();
  lightVal=analogRead(lightSensorPin);

  sensorDataFile = SD.open("data.txt", FILE_WRITE);
  
  //data logging:
  if (sensorDataFile) {
    Serial.println("Writing to data.txt...");
    sensorDataFile.print(temperatureVal);
    sensorDataFile.print("     ,      ");
    sensorDataFile.print(humidityVal);
    sensorDataFile.print("     ,      ");
    sensorDataFile.println(lightVal);
    sensorDataFile.close();
  } else {
    Serial.println("error opening data.txt");
  }

  if(lightVal>350){
    digitalWrite(RELAY_ENABLE, HIGH); // The relay is active low, so it turns on when we set the pin to LOW
    delay(2500);
    digitalWrite(RELAY_ENABLE, LOW);
    delay(5000);
  }
  else {
    digitalWrite(RELAY_ENABLE, LOW);
    delay(2000);
  }

}
